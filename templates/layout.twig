{# Template - navbar a footer #}

<!DOCTYPE html>
<html lang="cs" data-theme="winter">
<head>
    <title>{{ header.title }}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>
    <meta name="keywords" content="{{ header.key_words }}">
    <meta name="description" content="{{ header.description }}">
    <link rel="stylesheet" type="text/css" href="../public/output.css">
</head>

<body class="flex flex-col min-h-screen">
<header class="navbar bg-black text-white shadow-md">
    <!-- Navbar Start -->
    <div class="navbar-start">
        <div class="dropdown">
            <div class="drawer">
                <input id="sidebar" type="checkbox" class="drawer-toggle"/>
                <div class="drawer-content">
                    <label for="sidebar" tabindex="0" class="btn drawer-button btn-ghost lg:hidden">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h8m-8 6h16"/>
                        </svg>
                    </label>
                </div>
                <div class="drawer-side">
                    <label for="sidebar" aria-label="close sidebar" class="drawer-overlay"></label>
                    <a class="font-bold text-xl md:text-2xl mb-2">DigiArch</a>
                    <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
                        {% if user is defined and user %}
                            {% if user.role == 'admin' or user.role == 'superadmin' %}
                                <li class="text-base-content"><a href="/users">Správa uživatelů</a></li>
                                <li><a href="/admin">Správa článků</a></li>
                            {% endif %}
                        {% endif %}
                        {% if user is defined and user %}
                            {% if user.role == 'recenzent' %}
                                <li><a href="/reviews">Moje recenze</a></li>
                            {% endif %}
                        {% endif %}
                        {% if user is defined and user %}
                            {% if user.role == 'autor' %}
                                <li><a href="/articles">Moje články</a></li>
                            {% endif %}
                        {% endif %}
                        <li><a href="/profile">Uživatelský profil</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="flex-1 cursor-default">
            <a href="/" class="font-bold text-xl md:text-2xl ml-4">DigiArch</a>
        </div>
    </div>

    <!-- Navbar Center -->
    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            {% if user is defined and user %}
                {% if user.role == 'admin' or user.role == 'superadmin' %}
                    <li><a href="/users">Správa uživatelů</a></li>
                    <li><a href="/admin">Správa článků</a></li>
                {% endif %}
            {% endif %}
            {% if user is defined and user %}
                {% if user.role == 'recenzent' %}
                    <li><a href="/reviews">Moje recenze</a></li>
                {% endif %}
            {% endif %}
            {% if user is defined and user %}
                {% if user.role == 'autor' %}
                    <li><a href="/articles">Moje články</a></li>
                {% endif %}
            {% endif %}
        </ul>
    </div>

    <!-- Navbar End -->
    <div class="navbar-end">
        <label class="swap swap-rotate mr-5">
            <input type="checkbox" class="theme-controller" value="dracula"/>

            <!-- sun icon -->
            <svg
                    class="swap-off h-10 w-10 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24">
                <path
                        d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
            </svg>

            <!-- moon icon -->
            <svg
                    class="swap-on h-10 w-10 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24">
                <path
                        d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
            </svg>
        </label>

        {% if user is defined and user %}
            {# uzivatel prihlasen #}
            <div class="dropdown dropdown-end">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                    <div class="w-10 rounded-full">
                        <img alt="profile picture"
                             src="{{ user.profile_picture|default('/public/uploads/profiles/default.jpg') }}"
                        />
                    </div>
                </div>
                <ul tabindex="0"
                    class="menu menu-sm dropdown-content bg-base-300 border rounded-box z-1 mt-5 w-32 p-2 shadow-lg text-base-content">
                    <li>
                        <a class="justify-between text-sm" href="/profile">
                            Váš Profil
                        </a>
                    </li>
                    <li><a href="/auth/logout" class="text-sm text-error">Odhlásit se</a></li>
                </ul>
            </div>
        {% else %}
            {# uzivatel neni prihlasen - login btn #}
            <a href="/auth" class="btn btn-primary text-white">Login</a>
        {% endif %}
    </div>
</header>

<!-- Main content -->
<main class="flex-grow md:bg-base-200">
    {% block content %}{% endblock %}
</main>

<!-- Footer -->
<footer class="bg-black text-white py-8 mt-auto w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <!-- Footer text -->
            <div>
                <h2 class="text-xl font-bold">Forum DigiArch</h2>
                <p class="mt-2 text-sm">
                    Forum Digitální Architektury je platforma pro sdílení znalostí, diskusi a spolupráci mezi odborníky
                    a nadšenci v oblasti digitální architektury. Naším cílem je podporovat inovace a rozvoj v tomto
                    dynamickém oboru.
                </p>
            </div>

            <div>
                <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Links</h3>
                <ul class="mt-4 space-y-2">
                    <li><a href="#" class="hover:text-white transition">Domovská stránka</a></li>
                </ul>
            </div>

        </div>

        <div class="mt-8 pt-6 text-center text-xs text-gray-300">
            © 2025 Forum DigiArch
        </div>
    </div>
</footer>

<script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
<script>
    lucide.createIcons()
</script>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

<script>
    // prepinac dark/light modu
    (function () {
        const THEME_KEY = "theme"
        const DEFAULT_THEME = "winter"
        const controllers = document.querySelectorAll(".theme-controller")

        function applyTheme(theme) {
            document.documentElement.setAttribute("data-theme", theme || DEFAULT_THEME)
        }

        function init() {
            const saved = localStorage.getItem(THEME_KEY) || DEFAULT_THEME
            applyTheme(saved)

            controllers.forEach(ctrl => {
                // checkbox toggle
                if (ctrl.type === "checkbox") {
                    ctrl.checked = (saved === ctrl.value)
                    ctrl.addEventListener("change", function () {
                        const newTheme = this.checked ? this.value : DEFAULT_THEME
                        localStorage.setItem(THEME_KEY, newTheme)
                        applyTheme(newTheme)
                    })
                    return
                }

                ctrl.addEventListener("change", function () {
                    const newTheme = this.value || DEFAULT_THEME
                    localStorage.setItem(THEME_KEY, newTheme)
                    applyTheme(newTheme)
                })
            })
        }

        // inicializace po nacteni DOM
        if (document.readyState === "loading") {
            document.addEventListener("DOMContentLoaded", init)
        } else {
            init()
        }
    })()
</script>
</body>

</html>